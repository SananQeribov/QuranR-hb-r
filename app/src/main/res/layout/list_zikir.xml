<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/tasbeh"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tasbeh" />

        <TextView
            android:id="@+id/arabic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tasbeh"
            android:layout_marginStart="20dp"
            android:text="الرَّحْمَنُ"
            android:textSize="24sp"
            android:textColor="@color/text_color_primary_light" />

        <TextView
            android:id="@+id/reading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/arabic"
            android:layout_alignStart="@id/arabic"
            android:layout_marginTop="8dp"
            android:text="Ar Rahmaan"
            android:textSize="16sp"
            android:textColor="@color/text_color_primary_light" />

        <TextView
            android:id="@+id/queded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:text="1"
            android:textSize="16sp"
            android:textColor="@color/text_color_primary_light"/>

        <TextView
            android:id="@+id/transition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/queded"
            android:layout_alignBottom="@+id/reading"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/reading"
            android:text="The Most-Merciful"
            android:textColor="@color/text_color_primary_light"
            android:textSize="16sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
